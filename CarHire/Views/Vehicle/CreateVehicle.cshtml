@model VehicleViewModel

@{
    ViewBag.Title = "Add Movie";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="mb-3">
                <label asp-for="@Model.Make" class="form-label">Make</label>
                <input asp-for="@Model.Make" class="form-control" aria-required="true" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Model" class="form-label">Model</label>
                <input asp-for="@Model.Model" class="form-control" aria-required="true" />
                <span asp-validation-for="Model" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Color" class="form-label">Color</label>
                <input asp-for="@Model.Color" class="form-control" aria-required="true" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label">Image URL</label>
                <input asp-for="@Model.ImageUrl" class="form-control" value="" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PricePerDay" class="form-label">Price Per Day</label>
                <input asp-for="@Model.PricePerDay" class="form-control" value="" />
                <span asp-validation-for="PricePerDay" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.VehicleTypeId" class="form-label">VehicleType</label>
                <select asp-for="@Model.VehicleTypeId" class="form-control">
                    @foreach (var VehicleType in Model.VehicleType)
                    {
                        <option value="@VehicleType.Id">@VehicleType.Name</option>
                    }
                </select>
                <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-primary" type="submit" value="Add" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}